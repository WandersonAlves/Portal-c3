<div class="col-lg-9 col-md-9">
    <div class="col-padded2">
        <div class="gutter">
            <div class="col-lg-12 col-md-12">
                <h1 class="page-title2">Notícias</h1>
                <div class="category-description">
                </div>
            </div>
        </div>
        <div class="gutter k-equal-height">
            <% @articles.each do |article| %>
            <div class="news-mini-wrap">
                <figure class="news-featured-image2 col-lg-6 col-md-6">
                    <a href="<%= article_path(article) %>" title="<%= article.title%>">
                        <img src="<%= article.image.url %>" class="attachment-thumbnail wp-post-image" height="123" width="264" />
                    </a>
                </figure>
                <div class="page-subtitle-meta col-lg-6 col-md-6">
                    <h1 class="page-subtitle"><a href="<%= article_path(article) %>" title="<%= article.title%>" style="color: #00636F;"><%= article.title%></a></h1>
                        <span class="news-date2"><%= article.created_at.strftime("%H:%M")%></span>
                    <div class="news-summary2">
                        <p>
                            <%= sanitize article.description[0..30]%>
                        </p>
                    </div>
                </div>
            
        </div>
        <% end %>
    </div>
    <div class="gutter">
        <div class="col-lg-12">
            <%= will_paginate @articles, :previous_label => 'Anterior', :next_label => 'Próximo' %>
        </div>
    </div>
</div>
</div>
