<div class="col-lg-8 col-md-8">
    <div class="col-padded2">
        <div class=" gutter">
            <div class="col-lg-12 col-md-12">
                <h1 class="page-title3"><%= @article.title%></h1>
                <figure>
                    <br>
                   <%= image_tag @article.image.url, class: 'img-news' %>
                </figure>
                <span class="news-meta-date"> Postado em <%= @article.updated_at.strftime("%d/%m/%Y")%> <%= @article.updated_at.strftime("%H:%M")%> por <%= @article.user.name%> </span>
                <p><span class="news-meta-date"></span></p>
                <div class="news-body2">
                    <p class="call-out">
                        <p align="justify">
                            <%= @article.description.html_safe %>
                        </p>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
