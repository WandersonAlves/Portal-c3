<link rel="stylesheet" href="/assets/css/dashboard/dashboard-form.css" media="all">


<div class="row">
    <div class="col-xs-12">
				<%= form_for([:dashboard, @class], :multipart => true, :html => { :class => "form-horizontal form-dashboard"})  do |f| %>
					<section class="widget">
						<%= render "shared/messages", :target => @class %>
 										<header>
                                <span class="icon">&#59160;</span>
                                <hgroup>
                                    <h1>Turmas</h1>
                                    <h2><%= @class.new_record? ? 'Cadastrar nova turma' : 'Modificar turma' %></h2>
                                </hgroup>																
                    </header>
										<div class="content">
												<div class="form-group">
													  <label class="control-label col-sm-4">Nome</label>
                            <div class="col-sm-6">
                                <%= f.text_field :name, :class => "form-control" %>
                            </div>
												</div>

												<div class="form-group">
													<label class="control-label col-sm-4">Disciplina</label>
													<div class="col-sm-5">
                            <%= f.select :discipline_id, current_user.disciplines.collect {|a| ["#{a.name} - #{a.night? ? 'Noite' : 'Tarde'}", a.id]},:multiple => true, :class => "form-control multiselect" %>
													</div>								
												</div>

												<div class="form-group">
													<label class="control-label col-sm-4">Arquivos</label>
													<div class="col-sm-8">
														  <%= f.file_field :attachment_array, multiple:true, :class => "form-control"%>
													</div>								
												</div>
															 <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-4">
                                <%= f.button 'Salvar', class: 'btn btn-warning', type: 'submit' %>
                                <a href="<%= dashboard_discipline_classes_path %>"><button type="button" class="btn btn-primary">Voltar</button></a>
                            </div>
                         </div>
  
										</div>
						</section>
				<% end %>
		</div>
</div>






